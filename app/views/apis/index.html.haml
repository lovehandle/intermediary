%div{ class: "span12" }
  %div{ class: "row" }

    %div{ class: "header" }
      %div{ class: "pull-left" }
        %h1 APIs
      %div{ class: "pull-right" }
        %div{ class: "span2" }
          = link_to "New API", new_api_path, class: "btn btn-large btn-block btn-primary action"
    %ul{ class: "breadcrumb" }
      %li
        = link_to "Home", root_path
        %span.divider
      %li.active
        APIs
        %span.divider

  %div{ class: "row" }

    %ul.apis
      - @apis.each do |api|
        %li
          %h4
            = link_to api.name, api_path(api)
          %p= api.description
